<!--pages/entry/index.wxml-->
<view class="page">
  <view class="page__hd">
    <view class="page__title">磷石膏物流大数据平台</view>
  </view>
  <view class="page__bd">
    <view class="weui-panel weui-panel_access">
      <view class="weui-panel__bd">
        <view wx:for="{{messageBody}}" wx:key="{{item.title}}" data-title='{{item.title}}' bindtap='choiceMessage'>
          <view class="weui-media-box weui-media-box_appmsg" hover-class="weui-cell_active">
            <view class="weui-media-box__hd weui-media-box__hd_in-appmsg">
              <image class="weui-media-box__thumb" src="{{item.src}}" />
            </view>
            <view class="weui-media-box__bd weui-media-box__bd_in-appmsg">
              <view class="weui-media-box__title">{{item.title}}</view>
              <view class="weui-media-box__desc">{{item.describe}}</view>
            </view>
          </view>
        </view>
      </view>
    </view>
    <button class="weui-btn" type="primary" style='width:95%' bindtap='choice'>我的空间</button>
  </view>
</view>