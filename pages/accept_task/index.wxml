  </view>
</i-modal>

<i-modal title="装货视频上传" visible="{{loadVideo}}" width="300px" height="200px" actions="{{ actionsVideoUpload }}" bind:click="videoLoadModalClose">
  <view class="page__bd page__bd_spacing" style='word-wrap:break-word'>
    <view class='kuang_2' style='height:198px;weight:100%;'>
      <i-icon wx:if="{{newVideoSrc===''}}" type="add" size="60" color="#dddee1" bindtap='chooseVideo'></i-icon>
      <video wx:else id="loadVideo" src="{{newVideoSrc}}" enable-danmu controls></video>
    </view>
  </view>
</i-modal>

<i-modal title="卸货视频上传" visible="{{unloadVideo}}" width="300px" height="200px" actions="{{ actionsVideoUpload }}" bind:click="videoUnloadModalClose">
  <view class="page__bd page__bd_spacing" style='word-wrap:break-word'>
    <view class='kuang_2' style='height:198px;weight:100%;'>
      <i-icon wx:if="{{newVideoSrc===''}}" type="add" size="60" color="#dddee1" bindtap='chooseVideo'></i-icon>
      <video wx:else id="loadVideo" src="{{newVideoSrc}}" enable-danmu controls></video>
    </view>
  </view>
</i-modal>

<i-modal title="{{video_name}}" visible="{{showVideo}}" width="300px" height="200px" actions="{{ actionsVideo }}" bind:click="videoPlayModalClose">
  <view class="page__bd page__bd_spacing" style='word-wrap:break-word'>
    <view class='kuang_2' style='height:198px;weight:100%;'>
      <video id="showVideo" src="{{video_src}}" controls></video>
    </view>
  </view>
</i-modal>

<i-modal title="磅单识别" visible="{{picShow}}" width="300px" height="300px" actions="{{ actionsVideoUpload }}" bind:click="picModalClose">
  <view class="page__bd page__bd_spacing" style='word-wrap:break-word'>
    <view class='kuang_2' style='height:198px;weight:100%;'>
      <i-icon wx:if="{{picSrc===''}}" type="add" size="60" color="#dddee1" bindtap='chooseImage'></i-icon>
      <image wx:else style="background-color: #eeeeee;" mode="aspectFit" src="{{picSrc}}"></image>
    </view>
    <text>\n</text>
    <view class='kuang_1' style='background-color:#FFFFFF;'>
      <view class="weui-form-preview__bd">
        <view class="weui-form-preview__item">
          <view class="weui-form-preview__label">吨位</view>
          <view class="weui-form-preview__value">{{picPound}}</view>
        </view>
        <view class="weui-form-preview__item">
          <view class="weui-form-preview__label">时间</view>
          <view class="weui-form-preview__value">{{picDate}}</view>
        </view>
      </view>
    </view>
  </view>
</i-modal>

<i-modal title="识别结果" visible='{{recoResult}}' width="300px" height="80px" actions="{{ actionsVideoUpload }}" bind:click="picResultModalClose">
  <view style='background-color:#FFFFFF;'>
    <view class="weui-cell weui-cell_input">
      <view class="weui-cell__hd">
        <view class="weui-label">识别吨位</view>
      </view>
      <view class="weui-cell__bd">
        <input class="weui-input" type='number' value='{{picPound}}' placeholder="请输入准确的吨位" />
      </view>
    </view>
    <view class="weui-cell weui-cell_input">
      <view class="weui-cell__hd">
        <view class="weui-label">识别日期</view>
      </view>
      <view class="weui-cell__bd">
        <picker mode="date" value="{{picDate}}" bindchange="bindDateChange">
          <view class="weui-input">{{picDate}}</view>
        </picker>
      </view>
    </view>
  </view>
</i-modal>