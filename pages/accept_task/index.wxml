        <view class="weui-form-preview__item">
          <view class="weui-form-preview__label">装货时间</view>
          <view class="weui-form-preview__value">2019-03-18</view>
        </view>
        <view class="weui-form-preview__item">
          <view class="weui-form-preview__label">货主</view>
          <view class="weui-form-preview__value">XXXXXXXXXX</view>
        </view>
        <view class="weui-form-preview__item">
          <view class="weui-form-preview__label">起点</view>
          <view class="weui-form-preview__value">上海市浦东新区金海路11188号当铺</view>
        </view>
        <view class="weui-form-preview__item">
          <view class="weui-form-preview__label">终点</view>
          <view class="weui-form-preview__value">上海市浦东新区金海路11188号当铺</view>
        </view>
        <view class="weui-form-preview__item">
          <view class="weui-form-preview__label">运输货物</view>
          <view class="weui-form-preview__value">固体磷石膏</view>
        </view>
        <view class="weui-form-preview__item">
          <view class="weui-form-preview__label">吨位</view>
          <view class="weui-form-preview__value">50.8</view>
        </view>
        <view class="weui-form-preview__item">
          <view class="weui-form-preview__label">单价(元/吨)</view>
          <view class="weui-form-preview__value">18</view>
        </view>
        <view class="weui-form-preview__item">
          <view class="weui-form-preview__label">运输费</view>
          <view class="weui-form-preview__value">1888</view>
        </view>
      </view>
    </view>
  </view>
  <view class="page__bd page__bd_spacing">
    <button class="weui-btn" type="primary" bindtap='showModal'>接受任务</button>
    <button class="weui-btn" type="warn">拒绝任务</button>
  </view>
</view>

<view style='padding-top:{{head_size}};display:block;padding-bottom: {{foot_height}};'>
  <view style='width:100%;text-align:center'>
    <text style='font-size:25px'>进行中任务</text>
  </view>
  <view class="page__bd page__bd_spacing">
    <view class='kuang_1' style='background-color:#FFFFFF'>
      <view class="weui-form-preview__hd">
        <view class="weui-form-preview__item">
          <view class="weui-form-preview__label">运单详情</view>
        </view>
      </view>
      <view class="weui-form-preview__bd">
        <view class="weui-form-preview__item">
          <view class="weui-form-preview__label">车头牌号</view>
          <view class="weui-form-preview__value">京A00000</view>
        </view>
        <view class="weui-form-preview__item">
          <view class="weui-form-preview__label">货主</view>
          <view class="weui-form-preview__value">XXXXXXXXXX</view>
        </view>
        <view class="weui-form-preview__item">
          <view class="weui-form-preview__label">起点/终点</view>
          <view class="weui-form-preview__value">上海市浦东新区金海路11188号当铺-上海市浦东新区金海路11188号当铺</view>
        </view>
        <view class="weui-form-preview__item">
          <view class="weui-form-preview__label">运输货物</view>
          <view class="weui-form-preview__value">固体磷石膏</view>
        </view>
        <view class="weui-form-preview__item">
          <view class="weui-form-preview__label">吨位</view>
          <view class="weui-form-preview__value">50.8</view>
        </view>
        <view class="weui-form-preview__item">
          <view class="weui-form-preview__label">单价(元/吨)</view>
          <view class="weui-form-preview__value">18</view>
        </view>
        <view class="weui-form-preview__item">
          <view class="weui-form-preview__label">运输费</view>
          <view class="weui-form-preview__value">1888</view>
        </view>
        <view class="weui-form-preview__item">
          <view class="weui-form-preview__label">合同单号</view>
          <view class="weui-form-preview__value" style='color:#0bb20c' bindtap='showModalResp'>XXXXXXXXXXXX</view>
        </view>
      </view>
    </view>
  </view>

  <view class="page__bd page__bd_spacing">
    <view class='kuang_1' style='background-color:#FFFFFF'>
      <view class="weui-form-preview__hd">
        <view class="weui-form-preview__item">
          <view class="weui-form-preview__label">装货磅单</view>
          <view class="weui-form-preview__value_in-hd">
            <i-icon type="picture" size="30" color="#0bb20c" data-type='load' bindtap='showPictureModal'></i-icon>
          </view>
        </view>
      </view>
      <view class="weui-form-preview__bd">
        <view class="weui-form-preview__item">
          <view class="weui-form-preview__label">装货吨位</view>
          <view class="weui-form-preview__value">{{picLoadPound}}</view>
        </view>
        <view class="weui-form-preview__item">
          <view class="weui-form-preview__label">装货时间</view>
          <view class="weui-form-preview__value">{{picLoadDate}}</view>
        </view>
      </view>
    </view>
  </view>

  <view class="page__bd page__bd_spacing">
    <view class='kuang_1' style='background-color:#FFFFFF'>
      <view class="weui-form-preview__hd">
        <view class="weui-form-preview__item">
          <view class="weui-form-preview__label">卸货磅单</view>
          <view class="weui-form-preview__value_in-hd">
            <i-icon type="picture" size="30" color="#0bb20c" data-type='unload' bindtap='showPictureModal'></i-icon>
          </view>
        </view>
      </view>
      <view class="weui-form-preview__bd">
        <view class="weui-form-preview__item">
          <view class="weui-form-preview__label">卸货吨位</view>
          <view class="weui-form-preview__value">{{picUnloadPound}}</view>
        </view>
        <view class="weui-form-preview__item">
          <view class="weui-form-preview__label">卸货时间</view>
          <view class="weui-form-preview__value">{{picUnloadDate}}</view>
        </view>
      </view>
    </view>
  </view>

  <view class="page__bd page__bd_spacing">
    <view class='kuang_1' style='background-color:#FFFFFF'>
      <view class="weui-form-preview__hd">
        <view class="weui-form-preview__item">
          <view class="weui-form-preview__label">装货视频</view>
          <view class="weui-form-preview__value_in-hd">
            <i-icon type="add" size="30" color="#0bb20c" bindtap='videoLoadModalShow'></i-icon>
          </view>
        </view>
      </view>
      <view wx:if="{{oldLoadVideoFilePath.length>0}}" class="weui-form-preview__bd">
        <view class="weui-form-preview__item" wx:for="{{oldLoadVideoFilePath}}" wx:key="{{item.key}}">
          <view class="weui-form-preview__label" style='color:#0bb20c' data-key='{{item.key}}' data-title='{{item.name}}' data-src='{{item.src}}' bindtap='playVideo'>{{item.name}}</view>
          <i-icon type="close" size="20" color="red" bindtap='delVideo' data-key='{{item.key}}'></i-icon>
        </view>
      </view>
    </view>
  </view>

  <view class="page__bd page__bd_spacing">
    <view class='kuang_1' style='background-color:#FFFFFF'>
      <view class="weui-form-preview__hd">
        <view class="weui-form-preview__item">
          <view class="weui-form-preview__label">卸货视频</view>
          <view class="weui-form-preview__value_in-hd">
            <i-icon type="add" size="30" color="#0bb20c" bindtap='videoUploadModalShow'></i-icon>
          </view>
        </view>
      </view>
      <view wx:if="{{oldUnloadVideoFilePath.length>0}}" class="weui-form-preview__bd">
        <view class="weui-form-preview__item" wx:for="{{oldUnloadVideoFilePath}}" wx:key="{{item.key}}">
          <view class="weui-form-preview__label" style='color:#0bb20c' data-key='{{item.key}}' data-title='{{item.name}}' data-src='{{item.src}}' bindtap='playVideo'>{{item.name}}</view>
          <i-icon type="close" size="20" color="red" bindtap='delVideo' data-key='{{item.key}}'></i-icon>
        </view>
      </view>
    </view>
  </view>

  <view class="page__bd page__bd_spacing">
    <button class="weui-btn" type="primary">完成提交</button>
  </view>
</view>

<view class="foot" style='height:{{foot_height}}'>
  <i-tab-bar current="{{ current }}" color="#2d8cf0" bindchange="handleChange">
    <i-tab-bar-item key="document" icon="document" current-icon="document_fill" title="任务"></i-tab-bar-item>
    <i-tab-bar-item key="prompt_1" icon="prompt" current-icon="prompt_fill" title="待开发"></i-tab-bar-item>
    <i-tab-bar-item key="prompt_2" icon="prompt" current-icon="prompt_fill" title="待开发"></i-tab-bar-item>
    <i-tab-bar-item key="mine" icon="mine" current-icon="mine_fill" title="我的"></i-tab-bar-item>
  </i-tab-bar>
</view>

