<!--pages/company/index.wxml-->
<view class='title' style='height:{{head_size}};text-align：center'>
  <image style='width:{{icon_size}};height:{{icon_size}};position:fixed;float: left;padding-left:10px' src='../../img/transport.svg'></image>
  <text class='txt_title' style='font-size:{{text_size}};margin-left:{{margin_left}};padding-top:{{padding_top}}'>磷石膏物流大数据平台</text>
</view>
<view style='padding-top:{{head_size}};height:30px'></view>
<view>
  <i-panel>
    <i-row i-class="demo-row">
      <i-col span="24" i-class="demo-col">
        <i-input title="公司名称" type='textarea' value='{{companyName}}' placeholder="请输入公司名称" bindchange='inputCompanyName' />
      </i-col>
    </i-row>
    <i-row i-class="demo-row">
      <i-col span="24" i-class="demo-col">
        <i-input title="公司编码" type='textarea' value='{{companyCode}}' placeholder="请输入公司编码" bindchange='inputCompanyCode' />
      </i-col>
    </i-row>
    <i-row i-class="demo-row">
      <i-col span="24" i-class="demo-col">
        <picker mode="date" value="{{startDate}}"  bindchange="bindDateChange">
          <i-input value="{{ startDate }}" type='textarea' title="注册时间" placeholder="请选择公司注册时间" disabled/>
        </picker>
      </i-col>
    </i-row>
    <i-row i-class="demo-row">
      <i-col span="24" i-class="demo-col">
        <picker mode="region" bindchange="bindRegionChange" value="{{region}}" data-type='start'>
          <i-input title="公司地址" placeholder="请选择公司地址" type='textarea' value='{{address}}' disabled />
        </picker>
      </i-col>
    </i-row>
    <i-row i-class="demo-row">
      <i-col span="24" i-class="demo-col">
        <i-input title="详细地址" type='textarea' value='{{addressDetail}}' placeholder="请输入详细地址" bindchange='inputStartAddressChange' />
      </i-col>
    </i-row>
    <i-row i-class="demo-row">
      <i-col span="24" i-class="demo-col">
        <i-input title="公司法人" type='textarea' value='{{corporateRepresentative}}' placeholder="请输入公司法人姓名" bindchange='inputCorporateRepresentative' />
      </i-col>
    </i-row>
  </i-panel>
  <view class="page__bd">
    <view class="weui-cells">
      <view class="weui-cell">
        <view class="weui-cell__bd">
          <view class="weui-uploader">
            <view class="weui-uploader__hd">
              <view class="weui-uploader__title">上传公司相关信息图片</view>
            </view>
            <view class="weui-uploader__bd">
              <view class="weui-uploader__files" id="uploaderFiles">
                <block wx:for="{{files}}" wx:key="*this">
                  <view class="weui-uploader__file" bindtap="previewImage" id="{{item}}">
                    <image class="weui-uploader__img" src="{{item}}" mode="aspectFill" />
                  </view>
                </block>
              </view>
              <view class="weui-uploader__input-box">
                <view class="weui-uploader__input" bindtap="chooseImage"></view>
              </view>
            </view>
          </view>
        </view>
      </view>
    </view>
    <button class="weui-btn" type="primary" bindtap="companyRegister" style='width:95%'>注册</button>
  </view>
</view>
